# PortVision 360 Environment Configuration
# Скопируйте в .env и настройте под ваше окружение

# === GENERAL ===
NODE_ENV=development
LOG_LEVEL=debug
API_PORT=3000
APP_NAME=PortVision360

# === DATABASE ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portvision360
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_SCHEMA=public
DB_SSL=false
DB_SYNC=false
DB_MIGRATIONS_RUN=true

# === REDIS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# === KAFKA ===
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=portvision360
SCHEMA_REGISTRY_URL=http://localhost:8081

# === MINIO (S3) ===
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=portvision360
MINIO_SSL=false

# === KEYCLOAK ===
KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_REALM=portvision360
KEYCLOAK_CLIENT_ID=portvision360-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# === CLICKHOUSE ===
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=portvision360
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=clickhouse123

# === WEBSOCKET ===
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000

# === INTEGRATIONS ===
# OCR Service
OCR_SERVICE_URL=http://localhost:8090
OCR_API_KEY=your-ocr-api-key

# GPS/GLONASS
GPS_MQTT_BROKER=mqtt://localhost:1883
GPS_MQTT_USERNAME=gps_user
GPS_MQTT_PASSWORD=gps_password

# RFID
RFID_GATEWAY_URL=http://localhost:8091
RFID_API_KEY=your-rfid-api-key

# EDI
EDI_SFTP_HOST=localhost
EDI_SFTP_PORT=22
EDI_SFTP_USERNAME=edi_user
EDI_SFTP_PASSWORD=edi_password
EDI_SFTP_PATH=/edi

# 1C Integration
1C_SFTP_HOST=localhost
1C_SFTP_PORT=22
1C_SFTP_USERNAME=1c_user
1C_SFTP_PASSWORD=1c_password
1C_SFTP_PATH=/1c

# === MONITORING ===
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=portvision360
OTEL_RESOURCE_ATTRIBUTES=service.name=portvision360,service.version=1.0.0

# Prometheus
PROMETHEUS_PORT=9090

# === FRONTEND ===
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=portvision360
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=portvision360-frontend

# === SECURITY ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# === EMAIL ===
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=noreply@portvision360.local
SMTP_PASSWORD=smtp_password
SMTP_FROM=noreply@portvision360.local

# === SMS ===
SMS_PROVIDER=mock
SMS_API_KEY=your-sms-api-key
SMS_FROM=PortVision360

# === FILE STORAGE ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,application/vnd.ms-excel

# === RATE LIMITING ===
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# === SSL/TLS ===
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# === BUSINESS RULES ===
# Время бесплатного хранения (дни)
FREE_STORAGE_DAYS=3
# Максимальная высота стека (контейнеры)
MAX_STACK_HEIGHT=4
# Время автоназначения задач (минуты)
AUTO_ASSIGNMENT_TIMEOUT=5